{
  "name": "@ogea12/eslint-config",
  "description": "Config' ESLint appliquÃ©e dans les projets de l'OGEA 12",
  "version": "2.0.3",
  "engines": {
    "node": ">=20.17.0"
  },
  "type": "module",
  "files": [
    "build"
  ],
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js",
      "require": "./build/index.cjs"
    }
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prebuild": "npm run format && npm run lint:fix",
    "build": "tsup",
    "postbuild": "del-cli build/**/*.d.cts",
    "prepublishOnly": "npm run build",
    "release": "npx release-it",
    "taze": "npx taze"
  },
  "homepage": "https://github.com/ogea12/eslint-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ogea12/eslint-config.git"
  },
  "devDependencies": {
    "@ogea12/prettier-config": "^1.0.5",
    "@ogea12/tsconfig": "^1.0.5",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^22.15.3",
    "del-cli": "^6.0.0",
    "prettier": "^3.5.3",
    "release-it": "^19.0.2",
    "taze": "^19.1.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@adonisjs/eslint-plugin": "^2.0.0-beta.5",
    "@unocss/eslint-plugin": "^66.0.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-jsdoc": "^50.6.11",
    "eslint-plugin-n": "^17.17.0",
    "eslint-plugin-perfectionist": "^4.12.3",
    "eslint-plugin-prettier": "^5.3.1",
    "eslint-plugin-storybook": "^0.12.0",
    "eslint-plugin-unicorn": "^58.0.0",
    "eslint-plugin-yml": "^1.18.0",
    "local-pkg": "^1.1.1",
    "typescript-eslint": "^8.31.1"
  },
  "peerDependencies": {
    "eslint": "^9.20.0"
  },
  "author": "OGEA 12",
  "license": "MIT",
  "keywords": [
    "ogea12",
    "eslint"
  ],
  "prettier": "@ogea12/prettier-config",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "web": true
    }
  }
}
